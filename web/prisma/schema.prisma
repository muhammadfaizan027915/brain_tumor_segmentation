generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = -1
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSession {
  id        String      @id @default(uuid())
  startedat DateTime    @default(now())
  endedat   DateTime?
  uploads   MriUpload[]
}

model MriUpload {
  id            Int          @id @default(autoincrement())
  filename      String
  filepath      String
  uploaded_at    DateTime     @default(now())
  uesr_session_id String?
  results       MriResult[]
  user_session   UserSession? @relation(fields: [uesr_session_id], references: [id])
}

model MriResult {
  id         Int       @id @default(autoincrement())
  upload_id   Int
  output_path String
  createdAt  DateTime  @default(now())
  upload     MriUpload @relation(fields: [upload_id], references: [id])
}
