generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = -1
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserSession {
  id        String      @id @default(uuid())
  startedat DateTime    @default(now())
  endedat   DateTime?
  uploads   MriUpload[]
  results   MriResult[]
}

model MriUpload {
  id              String       @id @default(uuid())
  filename        String
  filepath        String
  uploaded_at     DateTime     @default(now())
  user_session_id String
  upload_dir_id   String
  user_session    UserSession? @relation(fields: [user_session_id], references: [id])
}

model MriResult {
  id              String       @id @default(uuid())
  output_path     String
  created_at      DateTime     @default(now())
  user_session_id String
  upload_dir_id   String
  user_session    UserSession? @relation(fields: [user_session_id], references: [id])
}
